.d-none
	display none !important

.d-inline
	display inline !important

.d-inline-block
	display inline-block !important

.d-block
	display block !important

.d-table
	display table !important

.d-table-row
	display table-row !important

.d-table-cell
	display table-cell !important

.d-flex
	display flex !important

.d-inline-flex
	display inline-flex !important

$breakpoints = {
	"phone": $media-screen-phone
	"tablet": $media-screen-tablet
	"desktop": $media-screen-desktop
	"lg-desktop": $media-screen-lg-desktop
}

$displays = none inline inline-block block flex inline-flex table table-cell table-row

for $breakpointName, $breakpointWidth in $breakpoints
	@media (max-width: $breakpointWidth)
		for $display in $displays
			.d-{$breakpointName}-{$display}
				display $display !important


@media print
	for $display in $displays
		.d-print-{$display}
			display $display !important
