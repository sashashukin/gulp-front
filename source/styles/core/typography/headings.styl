h1
h2
h3
h4
h5
h6
	margin $base-vertical-spacing 0 0.5em
	font-weight $heading-font-weight
	font-family $heading-font-family
	line-height normal

	a
		&
		&:visited
			color inherit

	&:first-child
		margin-top 0

	&:last-child
		margin-bottom 0

h1
	font-size 2.25em

h2
	font-size 2em

h3
	font-size 1.75em

h4
	font-size 1.5em

h5
	font-size 1.25em

h6
	font-size 1em
