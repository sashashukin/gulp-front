blockquote
	margin 0 0 $base-vertical-spacing
	padding ($base-vertical-spacing / 2)
	border-left 5px solid #eee

	p
	ul
	ol
		&:last-child
			margin-bottom 0

		&:first-child
			margin-top 0

	footer
	small
		display block
		font-size 80%
		line-height $base-vertical-spacing

		&:before
			content "\2014 \00A0" // - em dash, nbsp
