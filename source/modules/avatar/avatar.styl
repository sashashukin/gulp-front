.avatar
	position relative
	display inline-block
	overflow hidden
	size 3em
	background-color #2d3e60
	color #fff

	&__initials
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		z-index 1
		display flex
		justify-content center
		align-items center
		user-select none

	&__image
		position relative
		z-index 10
		display block
		width 100%
		height 100%

	// styles
	&_style_circle
		border-radius 30em

	&_style_rounded
		border-radius 0.2em

	&_style_square
		border-radius 0

	// sizes
	&_size_small
	&_size_s
		font-size 75%

	&_size_medium
	&_size_m
		font-size 100%

	&_size_large
	&_size_l
		font-size 125%

	&_size_extra-large
	&_size_xl
		font-size 150%

	&_size_extra-extra-large
	&_size_xxl
		font-size 175%

	// colors
	&_color_gray
		background-color $gray-3

	&_color_black
		background-color $gray-8

	&_color_red
		background-color $gray-6

	&_color_pink
		background-color $pink-6

	&_color_grape
		background-color $grape-6

	&_color_violet
		background-color $violet-6

	&_color_indigo
		background-color $indigo-6

	&_color_blue
		background-color $blue-6

	&_color_cyan
		background-color $cyan-6

	&_color_teal
		background-color $teal-6

	&_color_green
		background-color $green-6

	&_color_lime
		background-color $lime-6

	&_color_yellow
		background-color $yellow-6

	&_color_orange
		background-color $orange-6
