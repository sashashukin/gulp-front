include ../../spinner/spinner
include ../../button/button

h3 Styles
.demo-grid
	each style in ["loader", "blink", "scale", "pulse", "square-flip"]
		.demo-grid__item
			.demo-grid-item
				.demo-grid-item__container
					+spinner(style=style color="indigo" size="medium")
				.demo-grid-item__title= style

h3 Inherited
.demo.demo_buttons
	+button(color="red" style="rounded solid" icon)
		+spinner(style="loader")
			| Loading

	+button(color="indigo" style="rounded ghost" icon)
		+spinner(style="loader")
		span Loading

	+button(color="indigo" style="rounded ghost" disabled icon)
		+spinner(style="loader")
		span Loading

	br
	br

	each size in ["small", "medium", "large", "xl", "xxl"]
		+button(color="indigo" style="rounded ghost" size=size icon)
			+spinner(style="loader")
			span Loading


h3 Sizes
.demo-grid
	each size in ["small", "medium", "large", "xl", "xxl"]
		.demo-grid__item
			.demo-grid-item
				.demo-grid-item__container
					+spinner(style="loader" color="indigo" size=size)
				.demo-grid-item__title= size
	

h3 Colors
.demo-grid
	each color in ['gray', 'black', 'red', 'pink', 'grape', 'violet', 'indigo', 'blue', 'cyan', 'teal', 'green', 'lime', 'yellow', 'orange']
		.demo-grid__item
			.demo-grid-item
				.demo-grid-item__container
					+spinner(class="spinner_color_" + color).spinner_style_loader
				.demo-grid-item__title= color
