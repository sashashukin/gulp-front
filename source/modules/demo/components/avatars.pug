include ../../avatar/avatar

h4 Styles
.demo-grid
	each style in ["square", "rounded", "circle"]
		.demo-grid__item
			.demo-grid-item
				.demo-grid-item__container
					+avatar(
						image="https://unsplash.it/240/240?image=1027"
						title="Alyssa Burns"
						style=style
					)
				.demo-grid-item__title= style



h4 Sizes
.demo-grid
	each size in ["small", "medium", "large", "xl", "xxl"]
		.demo-grid__item
			.demo-grid-item
				.demo-grid-item__container
					+avatar(
						image="https://unsplash.it/240/240?image=1027"
						title="Alyssa Burns"
						style="circle"
						size=size
					)
				.demo-grid-item__title= size


h4 Initals
.demo-grid
	each size in ["small", "medium", "large", "xl", "xxl"]
		.demo-grid__item
			.demo-grid-item
				.demo-grid-item__container
					+avatar(
						title="Alyssa Burns"
						style="circle"
						size=size
					)
				.demo-grid-item__title= size


h5 Colors
.demo-grid
	each color in ["gray", "black", "red", "pink", "grape", "violet", "indigo", "blue", "cyan", "teal", "green", "lime", "yellow", "orange"]
		.demo-grid__item
			.demo-grid-item
				.demo-grid-item__container
					+avatar(
						title="Alyssa Burns"
						color=color
						style="circle"
					)
				.demo-grid-item__title= color
	



