include ../icon/icon
include ../close-button/close-button

mixin mobile-menu(data)
	.mobile-menu.js-link-sroll&attributes(attributes)
		.mobile-menu__header
			h2.mobile-menu__title Navigation
			+close-button(data-offcanvas-trigger="").mobile-menu__close

		nav.mobile-menu__menu
			ul.mobile-menu__list
				each item in data
					li.mobile-menu__item
						a(href=`${item.url}.html`).mobile-menu__link= item.title

						if item.submenu
							ul.mobile-menu__submenu
								each subItem in item.submenu
									li.mobile-menu__item
										a(href=`${item.url}.html#${subItem.hash}`).mobile-menu__submenu-link= subItem.title
