.dropdown
	position relative
	display inline-block

	&__trigger
		box-sizing border-box
		cursor pointer
		user-select none

	&__menu
		position absolute
		top 100%
		left 0
		z-index 100
		visibility hidden
		overflow hidden
		overflow-y auto
		min-width 100%
		text-align left
		opacity 0
		-webkit-overflow-scrolling touch
		will-change opacity, visibility

	&__caret
		display none

	&[data-dropdown-open="true"]
		& ^[0]__menu
			visibility visible
			opacity 1

	&[disabled]
	&[aria-disabled="true"]
		& ^[0]__trigger
			pointer-events none

		&
		&:hover
		&:focus
		&:active
			outline none
			box-shadow none

	&_style_default
		& ^[0]__trigger
			display flex
			box-sizing border-box
			padding em(12px) em(48px) em(12px) em(24px)
			min-height 48px
			border-radius 2px
			background-color #fff
			box-shadow 0px 1px 3px 0px rgba(#000, 0.2), 0px 1px 1px 0px rgba(#000, 0.14), 0px 2px 1px -1px rgba(#000, 0.12)

			&:hover
				background-color #F9F9F9

		& ^[0]__caret
			position absolute
			top 50%
			right 20px
			display block
			margin-top -5px
			size 6px
			border-width 0 2px 2px 0
			border-style solid
			border-color #535353
			transition 150ms all ease-in-out
			transform rotate(45deg)
			transform-origin 65% 65%

		& ^[0]__menu
			position absolute
			top 100%
			left 0
			z-index 100
			visibility hidden
			overflow hidden
			overflow-y auto
			margin 10px
			min-width 100%
			max-width 300px
			max-height 60vh
			width 200px
			border-radius 4px
			background #fafafa
			box-shadow 0 8px 10px 1px rgba(0, 0, 0, 0.14), 0 3px 14px 2px rgba(0, 0, 0, 0.12), 0 5px 5px -3px rgba(0, 0, 0, 0.2)
			text-align left
			opacity 0
			transition 125ms all ease-in-out
			-webkit-overflow-scrolling touch

		&[data-dropdown-open="true"]
			& ^[0]__caret
				transform rotate(225deg)

		&[disabled]
		&[aria-disabled="true"]
			& ^[0]__trigger
				background-color rgba(#000, 0.12)

			& ^[0]__text
			& ^[0]__caret
				opacity 0.5
