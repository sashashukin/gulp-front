.embed
	position relative
	display block
	overflow hidden
	padding 0
	height 0

	iframe
	embed
	object
	video
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		border none

	&_21x9
		padding-bottom percentage((9 / 21))

	&_16x9
		padding-bottom percentage((9 / 16))

	&_4x3
		padding-bottom percentage((3 / 4))

	&_1x1
		padding-bottom percentage((1 / 1))
