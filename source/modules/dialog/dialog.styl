$horizontal-padding = 30px

.dialog
	position relative
	display flex
	flex-direction column
	overflow-y auto
	box-sizing border-box
	max-width 800px
	max-height 100vh
	width 100%
	background-clip padding-box

	&__header
		position relative
		display block

	&__title
		overflow ellipsis
		margin 0

	&__close
		position absolute
		top 50%
		right 0
		border none
		background transparent
		transform translateY(-50%)

	&__content
		// 

	&__footer
		// 

	&_style_default
		display flex
		margin em(48px)
		border-radius 4px
		background-color #fff
		box-shadow 0px 11px 15px -7px rgba(0, 0, 0, 0.2), 0px 24px 38px 3px rgba(0, 0, 0, 0.14), 0px 9px 46px 8px rgba(0, 0, 0, 0.12)

		+below(480px)
			margin em(16px)

		& ^[0]__header
			flex 0 0 auto
			justify-content space-between
			align-items center
			padding em(24px) em(24px) em(20px)

		& ^[0]__close
			right 10px
			padding 16px

		& ^[0]__title
			margin-right 56px
			font-weight 500
			font-size em(22px)

		& ^[0]__content
			flex 1 1 auto
			padding 0 24px 24px
			-webkit-overflow-scrolling touch

		& ^[0]__footer
			flex 0 0 auto
			padding 8px

	&_style_responsive
		+below($media-screen-tablet)
			margin 0 !important
			max-width 100%
			max-height none
			width 100%
			width 100vw
			height 100%
			height 100vh
			border-radius 0
